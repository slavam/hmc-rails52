%h1 Изменить бюллетень
- case @bulletin.bulletin_type
  - when 'daily'
    = render 'form'
  - when 'daily2'
    = render 'daily2_form'
  - when 'storm', 'sea_storm', 'fire_storm'
    = render 'storm_form'
  - when 'holiday'
    = render 'holiday_form'
  - when 'tv'
    = render 'tv_form'
  - when 'radiation'
    = render 'radiation_form'
  - when 'radiation2'
    = render 'radiation2_form'
  - when 'avtodor'
    = render 'avtodor_form'
  - when 'autodor'
    = render 'autodor_form'
  - when 'autodor_warning'
    = render 'autodor_warning_form'    
  - when 'radio'
    = render 'radio_form'
  - when 'radio2'
    = render 'radio2_form'
  - when 'dte'
    = render 'dte_form'
  - when 'drsu'
    = render 'drsu_form'
  - when 'donbassgaz'
    = render 'donbassgaz_form'
  - when 'gsr'
    = render 'gsr_form'
  - when 'empire'
    = render 'empire_form'
  - when 'fire'
    = render 'fire_form'
  - when 'clarification'
    = render 'clarification_form'
  - when 'bus_station'
    = render 'bus_station_form'
  - when 'hydro'
    = render 'hydro_form'
  -# - when 'hydro2'
  -#   = render 'hydro2_form'
  - when 'alert', 'warning'
    = render 'alert_form'
  - when 'sea'
    = render 'sea_form'
  - when 'railway'
    = render 'railway_form'
  -# else
    = render 'sea_form'
