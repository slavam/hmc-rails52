- m_d = []
- m_d = @bulletin.meteo_data.split(';') if @bulletin.meteo_data.present?
.container
  = form_for @bulletin do |form|
    %table{ class: 'table table-hover' }
      %tr
        %th Тип
        %td= form.text_field :bulletin_type, readonly: true
      %tr
        %th Отчетная дата
        %td= form.text_field :report_date, readonly: true
      %tr
        %th Номер бюллетеня
        %td= form.number_field :curr_number, size: 8
      -# %tr
      -#   %th Базовый месяц среднего многолетнего уровня
      -#   %td= form.text_field :forecast_period
      %table{ class: 'table table-hover' }
        %th{ colspan: '7' } Водный и термический режимы
        %td
          %tr
            %th Река
            %th Пост
            %th Уровень воды в 08:00 часов (см)
            %th Изменение уровня воды за сутки (см)
            %th Средний многолетний уровень (см)
            %th Уровень начала затопления (см)
            %th Ледовые явления
          - m_d = []
          - m_d = @bulletin.meteo_data.split(';') if @bulletin.meteo_data.present?
          - m = @bulletin.report_date.month()
          - (0..12).each do |i|
            %tr
              %td= HydroObservation::RIVERS[i]
              %td= HydroObservation::TOWNS[i]
              - (0..1).each do |j|
                - k = 3*i + j
                %td= text_field_tag 'val_' + (k + 1).to_s, m_d[k].present? ? m_d[k] : ''
              %td= HydroObservation::LONGTERM_LEVEL_AVG[i+1][m]
              %td= HydroObservation::FLOOD_ONSET_LEVEL[i]
              %td= text_field_tag 'val_' + (3*i + 3).to_s, m_d[3*i+2]
      %tr
        %th Описание
        %td= form.text_area :forecast_day
      %tr
        %th Примечание
        -# %td= form.text_area :meteo_data
        %td= form.text_area :forecast_day_city
      %tr
        %th Базовая дата для вторичного бюллетеня
        %td= form.date_field :review_start_date, value: @bulletin.review_start_date.strftime("%Y-%m-%d")
      = render partial: 'chief'
      = render partial: 'hydro_responsible'
    %br
    = submit_tag 'Сохранить'
= link_to 'Список', '/bulletins/list?bulletin_type=hydro'
