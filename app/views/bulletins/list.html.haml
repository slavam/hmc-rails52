- if current_user.role != 'guest'
  = render 'bulletins/tabs'
.container
  %h3= "#{Bulletin::BULLETIN_TYPES[@bulletin_type]}"
  - if ['technicist','synoptic'].index(current_user.role)
    - case @bulletin_type
      - when 'sea', 'daily'
        =link_to "Создать (Лето)", "new_bulletin?variant=summer&bulletin_type=#{@bulletin_type}"
        =link_to "  Создать (Зима)", "new_bulletin?variant=winter&bulletin_type=#{@bulletin_type}"
        -# when 'radiation', 'radio', 'avtodor', 'storm', 'sea_storm', 'holiday', 'dte'
      - else
        = link_to "Создать", "new_bulletin?bulletin_type=#{@bulletin_type}"
  %br
  = will_paginate
  %table{class: "table table-hover"}
    %thead
      %tr
        %th= "Дата"
        %th= "Номер"
        - if @bulletin_type == 'daily'
          - if @variant.present?
            %th Бюллетень
          - else
            %th Две страницы
            %th Одна страница
            %th Без метеоданных
        - elsif (@bulletin_type == 'storm') or (@bulletin_type == 'sea_storm')
          %th Предупреждение
          - if current_user.role != 'guest'
            %th Оповещение
        - else
          %th= ""
        - if ['technicist','synoptic'].index(current_user.role)
          %th= ""
          %th= ""
    %tbody
      - @bulletins.each do |b| 
        - variant = ''
        - if (b.bulletin_type == 'sea') or (b.bulletin_type == 'daily')
          - variant = b.summer ? ' (Лето)' : ' (Зима)'
        %tr
          %td= b.report_date.strftime("%d-%m-%Y")
          %td= b.curr_number + variant
          - if @bulletin_type == 'daily'
            - if @variant == 'one_page'
              %td= link_to "Просмотреть", "#{b.id}/bulletin_show.pdf?variant=one_page"
            -elsif @variant == 'short'
              %td= link_to "Просмотреть", "#{b.id}/bulletin_show.pdf?variant=short"
            -else
              %td= link_to "Просмотреть", "#{b.id}/bulletin_show.pdf?variant=two_pages"
              %td= link_to "Просмотреть", "#{b.id}/bulletin_show.pdf?variant=one_page"
              %td= link_to "Просмотреть", "#{b.id}/bulletin_show.pdf?variant=short"
          - elsif (@bulletin_type == 'storm') or (@bulletin_type == 'sea_storm')
            %td= link_to "Просмотреть", "#{b.id}/bulletin_show.pdf?variant=warning"
            - if current_user.role != 'guest'
              %td= link_to "Просмотреть", "#{b.id}/bulletin_show.pdf?variant=notification"
          - else
            %td= link_to "Просмотреть/Распечатать", "#{b.id}/bulletin_show.pdf"
          - if ['technicist','synoptic'].index(current_user.role)
            %td= link_to "Изменить", edit_bulletin_path(b.id)
            %td= link_to 'Удалить', b, method: :delete, data: { confirm: 'Вы уверены?' }
  = will_paginate
