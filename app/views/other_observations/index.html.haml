= render 'synoptic_observations/tabs'
.container
  %ul{ :class=>"nav nav-tabs"}
    %li= link_to 'Температура на 8 часов', '/other_observations?factor=temp'
    %li= link_to 'Осадки', '/other_observations?factor=perc'
    %li= link_to 'Минимальная влажность', 'other_observations?factor=min_hum'
    %li= link_to 'Критическая температура вымерзания', 'other_observations?factor=freezing'
  %h3 Дополнительные данные: #{OtherObservation::OTHER_TYPES[@factor]}
  = will_paginate
  %table{class: "table table-hover"}
    %thead
      %tr
        %th Дата наблюдения
        %th Станция/пост
        %th Значение
        - if @factor == 'perc'
          %th Комментарий
    %tbody
      - name_posts = HydroPost.hydro_post_names_as_array
      - @other_observations.each do |o_o| 
        %tr
          %td= o_o.obs_date.strftime("%d-%m-%Y")+(o_o.data_type == 'perc' ? (o_o.period == 'day' ? '/День' : '/Ночь') : '')
          %td= o_o.data_type == 'perc' ? o_o.source : Station.find(o_o.station_id).name
          %td= @factor == 'min_hum' ? o_o.value.round : o_o.value
          - if @factor == 'perc'
            %td= o_o.description
  = will_paginate