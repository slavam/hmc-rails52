%div{ class:"row"}
  %div{ class: "col-md-6 col-md-offset-3"}
    %h1= "Пользователи"
    %table{class: "table table-hover"}
      %thead
        %tr
          
          
          %th Фамилия
          %th Имя
          %th Отчество
          %th Роль
          %th ID
          %th Логин
          %th Должность
          %th Метеостанция
          %th= ""
          %th= ""
      %tbody
        - @users.each do |user| 
          %tr
            %td= user.last_name
            %td= user.first_name
            %td= user.middle_name
            %td= user.role
            %td= user.id
            %td= user.login
            %td= user.position
            %td= user.station_id.present? ? Station.find(user.station_id).name : ''
            %td= link_to 'Изменить', edit_user_path(user.id)
            %td= link_to 'Удалить', user, method: :delete, data: { confirm: 'Уверены?' }
    = link_to "Добавить пользователя", new_user_path