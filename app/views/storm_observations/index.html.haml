= render 'synoptic_observations/tabs'
.container
  %h3 Телеграммы штормовые
  = will_paginate
  %table{class: "table table-hover"}
    %thead
      %tr
        %th Дата/время(UTC) явления 
        %th Метеостанция
        %th Телеграмма
        /
          %th= ""
          %th= ""
          %th= ""
    %tbody
      - name_stations = Station.name_stations_as_array
      - @storm_observations.each do |s_o| 
        %tr
          %td= s_o.telegram_date.utc.strftime("%d-%m-%Y %H:%M:%S UTC")
          %td= name_stations[s_o.station_id]
          %td= link_to s_o.telegram, storm_observation_path(s_o)
          /
            %td= link_to "Просмотр", storm_observation_path(s_o)
            %td= link_to "Изменить", edit_storm_observation_path(s_o.id)
            %td= link_to 'Destroy', s_o, method: :delete, data: { confirm: 'Are you sure?' }
  = will_paginate
/  
  %br
  = link_to "Создать", new_storm_observation_path
