.row
  %div{class: "col-md-6 col-md-offset-3"}
    %h1 Пункты снегосъемки
    %table{class: "table table-hover"}
      %thead
        %tr
          %th ID
          %th Название
          %th Код
          %th Тип
          %th Активен?
          %th= ""
      %tbody
        - @snow_points.each do |sp| 
          %tr
            %td= sp.id
            %td= sp.name
            %td= sp.code
            %td= sp.snow_point_type
            %td= sp.is_active
            - if current_user.admin?
              %td= link_to 'Изменить', edit_snow_point_path(sp.id)
              -# %td= link_to 'Удалить', sp, method: :delete, data: { confirm: 'Уверены?' }
    - if current_user.admin?
      = link_to "Добавить пункт", new_snow_point_path